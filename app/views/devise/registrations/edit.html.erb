<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Edit Profile", edit_user_registration_path, class: "sidebar-link active" %></li>
    </ul>
    <br>
    <%= link_to "View My Profile", user_path(current_user.id), class: "btn btn-light wide" %>
  </div>
  <div class="col-md-9 text-center">
    <div class="card">
      <div class="card-header">Your Profile</div>
      <div class="card-text">
        <div class="container">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render 'shared/devisemes' %>

            <div class="form-login">
              <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname", class: "form-control", placeholder: "Full Name" %>
            </div>

            <div class="form-login">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
            </div>

            <div class="form-login">
              <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control", placeholder: "Phone Number" %>
            </div>

            <div class="form-login">
              <%= f.text_area :description, rows: 5, cols: 25, class: "form-control", placeholder: "Description" %>
            </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-login">
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "New Password (6 characters minimum)" %>
              <% if @minimum_password_length %>
              <% end %>
            </div>

            <div class="form-login">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm New Password" %>
            </div>

            <div class="actions">
              <%= f.submit "Update", class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<body class="d-flex text-center">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'shared/devisemes' %>

  <div class="form-login">
    <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname", class: "form-control", placeholder: "Full Name" %>
  </div>

  <div class="form-login">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
  </div>

  <div class="form-login">
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "New Password (minimum 6 characters)" %>
  </div>

  <div class="form-login">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm New Password" %>
  </div>
  <br/>
  <div class="actions form-login">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
    <%= link_to "Sign up with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-primary" %>
  </div>
<% end %>
</body>

<body class="d-flex text-center">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render 'shared/devisemes' %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-login">
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New Password (6 characters minimum)", class: "form-control" %>
    </div>

    <div class="form-login">
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "Confirm New Password" %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", class: 'btn btn-primary' %>
    </div>
  <% end %>
</body>

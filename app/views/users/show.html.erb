<div class="row">
  <div class="col-md-3">
    <div class="card">
      <%= image_tag avatar_url(@user), class: "avatar-full card-img-top" %>
      <div class="card-title">Verification</div>
      <div class="card-text">
        <%= @user.email %> <br>
        Phone Number
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <h2><%= @user.fullname %></h2>
    <div class="description row-space-3">
      <%= @user.description %>
    </div>
  </div>
</div>

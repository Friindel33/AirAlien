<% if @photos %>

  <div class="row">
    <% @photos.each do |photo| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header preview">
            <%= image_tag photo.image.url() %>
          </div>
          <div class="card-body">
            <span class="pull-right">
              <i class="fa fa-times fa-lg"></i>
            </span>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<% end %>
